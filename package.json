{
  "name": "@pure-ui/monorepo",
  "version": "0.0.1",
  "packageManager": "pnpm@8.1.1",
  "description": "一个基于Web Component的UI组件库",
  "preinstall": "npx only-allow pnpm",
  "scripts": {
    "prepare": "husky install",
    "commit": "git cz",
    "changeset": "changeset",
    "dev": "pnpm --filter @pure-ui/docs dev",
    "build:docs": "pnpm --filter @pure-ui/docs build",
    "build:themes": "pnpm --filter @pure-ui/themes build",
    "dev:themes": "pnpm --filter @pure-ui/themes dev"
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "keywords": [
    "Web Component",
    "Lit",
    "跨端"
  ],
  "author": {
    "name": "CJWbiu",
    "url": "https://github.com/CJWbiu"
  },
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "commitizen": "^4.3.0",
    "commitlint-config-cz": "^0.13.3",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  }
}
